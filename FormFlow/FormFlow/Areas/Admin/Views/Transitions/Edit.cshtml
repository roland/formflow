@model FormFlow.Models.Transition

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Transition</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FromStepID, "FromStep")
        </div>
        <div class="editor-field">
            @Html.DropDownList("FromStepID", String.Empty)
            @Html.ValidationMessageFor(model => model.FromStepID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ToStepID, "ToStep")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ToStepID", String.Empty)
            @Html.ValidationMessageFor(model => model.ToStepID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TranistionTypeID, "TransitionType")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TranistionTypeID", String.Empty)
            @Html.ValidationMessageFor(model => model.TranistionTypeID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
